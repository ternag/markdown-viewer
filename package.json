{
  "name": "markdown-viewer",
  "version": "0.1.0",
  "description": "A lightweight, cross-platform markdown viewer",
  "main": "src/index.html",
  "scripts": {
    "dev:frontend": "npm run build:frontend",
    "build": "npm run build:frontend",
    "build:frontend": "cp src/*.html dist/ && cp src/*.css dist/ && cp src/*.js dist/",
    "dev": "cargo tauri dev",
    "build:app": "cargo tauri build",
    "build:release": "npm run build && cargo tauri build",
    "build:debug": "npm run build && cargo tauri build --debug",
    "type-check": "npx tsc --noEmit",
    "clean": "rm -rf dist/* src-tauri/target",
    "test:build": "npm run build && echo 'Frontend build successful'"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.0.0",
    "@types/prismjs": "^1.26.5",
    "serve": "^14.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.3.2",
    "@tauri-apps/plugin-fs": "^2.4.1",
    "fast-diff": "^1.3.0",
    "markdown-it": "^14.0.0",
    "prismjs": "^1.29.0"
  }
}
