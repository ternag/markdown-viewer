{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markdown Viewer",
  "version": "0.1.0",
  "identifier": "com.markdownviewer.viewer",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run build:frontend",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Markdown Viewer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
